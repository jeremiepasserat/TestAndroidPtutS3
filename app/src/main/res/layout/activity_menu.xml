<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context="com.example.chrx.testaixenbus.Applications.Menu"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/arrets"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/arrets"
        app:layout_constraintBottom_toTopOf="@+id/itineraire"
        app:layout_constraintEnd_toStartOf="@+id/lignes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/lignes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/ligne"
        app:layout_constraintBottom_toTopOf="@+id/itineraire"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/arrets"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/itineraire"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="149dp"
        android:background="@drawable/iti"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lignes"
        app:layout_constraintStart_toStartOf="@+id/lignes"
        app:layout_constraintTop_toBottomOf="@+id/lignes" />

    <Button
        android:id="@+id/informations"
        android:layout_width="0dp"
        android:layout_height="79dp"
        android:background="@drawable/info"
        app:layout_constraintBottom_toTopOf="@+id/notifications"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itineraire" />

    <ToggleButton
        android:id="@+id/notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:textOff="@string/notificationsOff"
        android:textOn="@string/notificationsOn"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/informations" />


</android.support.constraint.ConstraintLayout>
